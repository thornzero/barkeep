Section "InputClass"
	Identifier	"calibration"
	MatchProduct	"SLT Digital USB TouchController"
	Option	"MinX"	"8107"
	Option	"MaxX"	"59220"
	Option	"MinY"	"8761"
	Option	"MaxY"	"55750"
	Option	"SwapXY"	"0" # unless it was already set to 1
	Option	"InvertX"	"0"  # unless it was already set
	Option	"InvertY"	"0"  # unless it was already set
EndSection

xinput set-prop "SLT Digital USB TouchController" "MinX" "8107"
xinput set-prop "SLT Digital USB TouchController" "MaxX" "59220"
xinput set-prop "SLT Digital USB TouchController" "MinY" "8761"
xinput set-prop "SLT Digital USB TouchController" "MaxY" "55750"
